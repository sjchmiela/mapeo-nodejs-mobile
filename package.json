{
  "name": "mapeo-mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "lint": "eslint *.js \"src/**/*.js\"",
    "flow": "flow",
    "docz:dev": "docz dev --native",
    "docz:build": "docz build --native"
  },
  "dependencies": {
    "@unimodules/core": "^0.2.0",
    "debug": "^4.1.1",
    "expo-camera": "^3.0.0",
    "expo-location": "^3.0.0",
    "nodejs-mobile-react-native": "^0.3.3",
    "react": "16.6.3",
    "react-native": "0.58.5",
    "react-native-gesture-handler": "^1.1.0",
    "react-native-splash-screen": "^3.2.0",
    "react-navigation": "^3.3.2"
  },
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "24.1.0",
    "detox": "^10.0.10",
    "docz": "^0.13.7",
    "docz-plugin-netlify": "^1.1.4",
    "docz-theme-default": "^0.13.7",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.86.0",
    "jest": "^24.1.0",
    "metro-react-native-babel-preset": "0.52.0",
    "react-art": "^16.8.2",
    "react-native-web": "^0.10.0",
    "react-test-renderer": "16.6.3",
    "webpack": "4.28.4"
  },
  "jest": {
    "preset": "react-native"
  },
  "detox": {
    "test-runner": "jest",
    "configurations": {
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "testEmulator"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "name": "testEmulator"
      },
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/mapeo.app",
        "build": "xcodebuild -project ios/mapeo.xcodeproj -scheme mapeo -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 6s"
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/mapeo.app",
        "build": "xcodebuild -project ios/mapeo.xcodeproj -scheme mapeo -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 6s"
      }
    }
  }
}
